<div class="well">

<%= form_for @danger do |f| %>
  <% if @danger.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@danger.errors.count, "error") %> prohibited this danger from being saved:</h2>

      <ul>
      <% @danger.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
