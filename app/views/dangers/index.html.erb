<h3 align="center">Módulo de Peligros y Riesgos</h3>


<center><%= link_to ' Agregar peligro', new_danger_path, :class => "active icon-pencil btn btn-success" %></center><br /><br />
<center>
  <table class="table table-striped table-condensed">
    <tr class="align-center">
      <td colspan='2'><h5><b>Peligros</b></h5></td>
      <td colspan='2'><h5><b>Riesgos</b></h5></td>
    </tr>

    <% @dangers.each do |danger| %>
      <tr>
        <% @riesgo = Risk.where(:danger_id => danger.id ) %>
        <td>
          <%= link_to danger.description, danger %></td>
          <td class="middle" width="100"><%= link_to ' Eliminar', danger, confirm: "¿Esta seguro que desea eliminar el peligro: #{danger.description}?", method: :delete , :class => "active icon-trash btn btn-mini btn-danger" %>
        </td>
        <td colspan="2">
          <%= link_to ' Agregar Riesgo',new_danger_risk_path(danger.id), :class => "active icon-pencil btn btn-mini btn-success" %>
        </td>
      </tr>
      <% @riesgo.each do |r| %>
          <tr>    
          <td></td><td></td>
          <td><%= link_to r.description, danger_risk_path(danger.id, r)%></td>
          <td width="100"><%= link_to ' Eliminar', danger_risk_path(danger.id, r), confirm: "¿Esta seguro que desea eliminar el riesgo #{r.description}?", method: :delete , :class => "active icon-trash btn btn-mini btn-danger" %>
          </td>
        </tr>   
      <%end%>
    <% end %>
  </table>
</center>


