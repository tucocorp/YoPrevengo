<!DOCTYPE html>
<html>
<head>
  <title>Yo_Prevengo</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  
  <%= csrf_meta_tags %>
</head>
<body>
<nav class = "navbar navbar-inverse navbar-fixed-top"%>
	<div class = "navbar-inner">
		<div class = "container">
			<a class="brand" href="/">Prevengo</a>
			<ul class ="nav">
			<% if current_user %>
				<% if current_user.user_type.name == "Administrador" %>
					<li class="divider-vertical"></li>
					<li><%= link_to 'Compañias', companies_path %></li><li class="divider-vertical"></li>
					<li><%= link_to 'Usuarios' , users_path%></li><li class="divider-vertical"></li>
					<li><%= link_to 'Riesgos y peligros' , dangers_path%></li><li class="divider-vertical"></li>
					<li><%= link_to 'Daños' , damages_path%></li>
					<!--<li><%= link_to 'Buscar Matrices', risk_matrices_path %></li><li class="divider-vertical"></li>-->
			</ul>
			<ul class="nav pull-right">
				<li class="divider-vertical"></li>
				<li class="dropdown" id="menu1">
			    	<a class="dropdown-toggle" data-toggle="dropdown" href="#menu1" style="width:270px">
	      				Bienvenido administrador: <%= "#{current_user.username}" %>
	      				<b class="caret"></b>
	   				</a>

		    		<ul class="dropdown-menu">
					    <li><%= link_to "Cambiar contraseña", edit_password_path(current_user.id) %></li>
					    <li><%= link_to 'Usuarios' , users_path%></li>
					    <li class="divider"></li>
					    <li><%= link_to "Cerrar sesion", logout_path %></li>
					</ul>
				</li>
		  	</ul>             
				<% else %>
					<li class="active"><%= link_to 'Inicio', root_path %></li>
					<li class="active"><%= link_to 'Compañias', companies_path %></li>
			</ul>
			<ul class="nav pull-right">
				<li class="divider-vertical"></li>
				<li class="dropdown" id="menu1">
			    	<a class="dropdown-toggle" data-toggle="dropdown" href="#menu1" style="width:270px">
	      				Bienvenido prevencionista: <%= "#{current_user.username}" %>
	      				<b class="caret"></b>
	   				</a>
		    		<ul class="dropdown-menu">
					    <li><%= link_to "Cambiar contraseña", edit_password_path(current_user.id) %></li>
					    <li class="divider"></li>
					    <li><%= link_to "Cerrar sesion", logout_path %></li>
					</ul>
				</li>
		  	</ul>
				<% end %>
			<% else %>
				<ul class="nav pull-right">
					<li class="active"><%= link_to 'Iniciar Sesion', login_path, :class => "btn-success"%></li>
				</ul>
			<% end %>
		</div>
	</div>
</nav>

<%= yield %>


</body>
</html>