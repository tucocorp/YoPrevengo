<h3 align="center">Listado de Compañías</h3>
<center>
  <table>
    <tr>
      <%= link_to ' Agregar Compañia', new_company_path, :class => "active btn icon-pencil btn-success" %>
    </tr>
  </table>
</center>

<div class="well span6" id="divtabla">
  <table class='table'>
    <tr>
      <!--<th>ID</th>-->
      <th>Nombre de la Empresa</th>
      <th></th>
    </tr>

    <% @companies.each do |company| %>
      <tr>
        <!--<td><%= company.id %></td>-->
        <td><%= link_to company.name, company %>
        <td><%= link_to ' Eliminar', company, confirm: "¿Estas seguro que desea eliminar la compañia: #{company.name}", method: :delete, :class => "active icon-trash btn btn-mini btn-danger" %></td>
      </tr>
    <% end %>
  </table>
</div>